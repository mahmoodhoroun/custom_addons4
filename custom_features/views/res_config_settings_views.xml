<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.custom_features</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="WhatsApp Templates" name="whatsapp_templates">
                    <block title="WhatsApp Templates Configuration" name="whatsapp_templates_container">
                        <setting string="Cathedis WhatsApp Template" help="Configure the WhatsApp template for Cathedis notifications">
                            <field name="cathedis_whatsapp_template" class="o_light_label"/>
                        </setting>
                        <setting string="Chronodiali WhatsApp Template" help="Configure the WhatsApp template for Chronodiali notifications">
                            <field name="chronodiali_whatsapp_template" class="o_light_label"/>
                        </setting>
                        <setting string="Quotation WhatsApp Template" help="Configure the WhatsApp template for quotation notifications">
                            <field name="quotation_whatsapp_template" class="o_light_label"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
