<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_signature" model="ir.ui.view">
        <field name="name">res.users.form.inherit.signature</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Signature" name="signature">
                    <group>
                        <field name="signature_image" widget="image" class="oe_avatar"/>
                    </group>
                </page>
                <page string="Stamp" name="stamp">
                    <group>
                        <field name="stamp_image" widget="image" class="oe_avatar"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
